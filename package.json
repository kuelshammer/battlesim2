{
  "name": "battlesim",
  "version": "0.1.0",
  "private": true,
  "main": "electron.js",
  "homepage": ".",
  "build": {
    "appId": "com.battlesim.app",
    "productName": "Battlesim",
    "mac": {
      "category": "public.app-category.utilities",
      "target": {
        "target": "default",
        "arch": [
          "arm64",
          "x64"
        ]
      }
    },
    "files": [
      "electron.js",
      "preload.js",
      "out/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    }
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron": "electron .",
    "electron:pack": "electron-builder",
    "electron:dev": "electron .",
    "build:electron": "npm run build:wasm && npm run build && npx electron-builder --mac",
    "build:wasm": "cd simulation-wasm && wasm-pack build --target web --out-dir pkg",
    "build:wasm:dev": "cd simulation-wasm && wasm-pack build --target web --out-dir pkg --dev",
    "dev:wasm": "npm run build:wasm:dev && next dev",
    "dist": "npm run build:wasm && npx electron-builder --mac",
    "electron:start": "electron ."
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.2.0",
    "@fortawesome/free-solid-svg-icons": "^6.2.0",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@hookform/resolvers": "^3.1.0",
    "@ts-react/form": "^1.6.4",
    "@types/node": "18.11.9",
    "@types/react": "18.0.24",
    "@types/react-dom": "18.0.8",
    "dice-roller-parser": "^0.1.8",
    "next": "^14.2.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.43.9",
    "react-range": "^1.8.14",
    "react-select": "^5.7.3",
    "sass": "^1.56.0",
    "simulation-wasm": "file:simulation-wasm/pkg",
    "typescript": "4.8.4",
    "uuid": "^9.0.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/uuid": "^9.0.1",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12"
  }
}